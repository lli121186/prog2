<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prog2.MainPage">

    <StackLayout>
        <Button Text="Öffne CSV-Datei"
                Clicked="OnOpenCsvClicked" />

        <CollectionView x:Name="csvCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding Column1}" />
                        <Label Text="{Binding Column2}" />
                        <!-- Add more labels for additional columns as needed -->
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
